<!DOCTYPE html>
<html>
<head>
{#    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />#}
    <meta charset="UTF-8"/>
    <title>{% block title %}{% endblock %} | Cupon</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/normalizar.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/comun.css') }}" />
    {% endblock %}

    <link rel="shortcut icon" href="{{ asset('favicon.png') }}" />
    {% block javascripts %}
        <!--[if lt IE 9]>
        <script src="{{ asset('js/lt_ie9/html5.js') }}"></script>
        <![endif]-->
    {% endblock %}
</head>

<body id="{% block id '' %}">
    <div id="contenedor">
        {% block body %}{% endblock %}

        <footer> 
                &copy; {{ 'now'|date('Y') }} - Cupon 
                <a href="{{ path('pagina', { nombrePagina: 'ayuda' }) }}"> Ayuda </a> ... 
                <a href="{{ path('pagina', { nombrePagina: 'privacidad' }) }}"> Privacidad </a> 
                <a href="{{ path('pagina', { nombrePagina: 'sobre_nosotros' }) }}"> Sobre nosotros </a> 
        </footer>
    </div>
</body>
</html>
